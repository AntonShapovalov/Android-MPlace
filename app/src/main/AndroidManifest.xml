<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.org.adons.mplace">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".app.MPlaceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name=".legacy.MainActivity"
            android:label="@string/main_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".legacy.edit.AddActivity"
            android:label="@string/edit_title"
            android:theme="@style/AppTheme.DarkActionBar"
            android:windowSoftInputMode="stateHidden"/>

        <activity
            android:name=".legacy.edit.EditActivity"
            android:label="@string/edit_title"
            android:theme="@style/AppTheme.DarkActionBar"
            android:windowSoftInputMode="stateHidden"/>

        <activity android:name=".legacy.view.ViewActivity"/>

        <activity
            android:name=".legacy.logcat.LogcatMainActivity"
            android:label="@string/logcat_title"/>

        <activity
            android:name=".legacy.logcat.LogcatDetailsActivity"
            android:label="@string/logcat_title"
            android:theme="@style/Base.AppTheme"/>

        <provider
            android:name=".legacy.db.DBContentProvider"
            android:authorities="ru.org.adons.mplace.legacy.db"
            android:exported="false"/>

        <service
            android:name=".legacy.db.DBUpdateService"
            android:exported="false"/>

    </application>

</manifest>
